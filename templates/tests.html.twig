{% extends 'base.html.twig' %}

{% block body %}
    <div class="controller" data-route="/tests">
        <div class="createForm" data-action="create">
            <h3>Creating test</h3>
            <div class="form-group">
                <select name="difficulty" class="input">
                    <option disabled selected>difficulty</option>
                    {% for difficulty in difficulties %}
                        <option value="{{ difficulty.id }}">{{ difficulty.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <select name="direction" class="input">
                    <option disabled selected>direction</option>
                    {% for direction in directions %}
                        <option value="{{ direction.id }}">{{ direction.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="input" name="barrier" placeholder="barrier">
            </div>
            <div class="form-group">
                <input type="text" class="input" name="occurrence" placeholder="occurrence">
            </div>
            <div class="form-group">
                <button>create</button>
            </div>
        </div>
        <br>
        <div class="readAllForm" data-action="readAll">
            <h3>Show all tests</h3>
            <div class="form-group">
                <button>read all</button>
            </div>
        </div>
        <br>
        <div class="readForm" data-action="read">
            <h3>Show test</h3>
            <div class="form-group">
                <input type="text" class="input" name="id" placeholder="id">
            </div>
            <div class="form-group">
                <button>read</button>
            </div>
        </div>
        <div class="updateForm" data-action="update">
            <h3>Update test</h3>
            <div class="form-group">
                <input type="text" class="input" name="id" placeholder="id">
            </div>
            <div class="form-group">
                <select name="difficulty" class="input">
                    <option disabled selected>difficulty</option>
                    {% for difficulty in difficulties %}
                        <option value="{{ difficulty.id }}">{{ difficulty.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <select name="direction" class="input">
                    <option disabled selected>direction</option>
                    {% for direction in directions %}
                        <option value="{{ direction.id }}">{{ direction.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <input type="text" class="input" name="barrier" placeholder="barrier">
            </div>
            <div class="form-group">
                <input type="text" class="input" name="occurrence" placeholder="occurrence">
            </div>
            <div class="form-group">
                <button>update</button>
            </div>
        </div>
        <div class="deleteForm" data-action="delete">
            <h3>Delete test</h3>
            <div class="form-group">
                <input type="text" class="input" name="id" placeholder="id">
            </div>
            <div class="form-group">
                <button>delete</button>
            </div>
        </div>
        <div class="readRandomForm" data-action="readRandom">
            <h3>Read random</h3>
            <div class="form-group">
                <select name="difficulty" class="input">
                    <option disabled selected>difficulty</option>
                    {% for difficulty in difficulties %}
                        <option value="{{ difficulty.id }}">{{ difficulty.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <select name="direction" class="input">
                    <option disabled selected>direction</option>
                    {% for direction in directions %}
                        <option value="{{ direction.id }}">{{ direction.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <button>read random</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
